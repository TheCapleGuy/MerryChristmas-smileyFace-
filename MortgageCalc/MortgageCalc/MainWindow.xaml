<Window x:Class="MortgageCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortgageCalc"
        mc:Ignorable="d"
        Title="Mortage Calculator" Height="550" Width="750">
    <Grid Name ="input">
        <Button x:Name="Equals" Content="Enter" HorizontalAlignment="Left" Height="24" Margin="32,21,0,0" VerticalAlignment="Top" Width="42" Click="Button_Equals"/>
        <TextBox x:Name="mortgageAmount" Background="LightBlue"  HorizontalAlignment="Left" Height="27" Margin="32,50,0,444"  TextWrapping="Wrap" VerticalAlignment="Top" Width="222" TextChanged="MortgageEnterInput"/>
        <TextBox x:Name="interestRate"   Background="LightPink"  HorizontalAlignment="Left" Height="27" Margin="254,50,0,444" TextWrapping="Wrap" VerticalAlignment="Top" Width="222"/>
        <TextBox x:Name="mortagePeriod"  Background="LightGreen" HorizontalAlignment="Left" Height="27" Margin="476,50,44,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="222"/>
        <TextBox x:Name="outputMortgageAmount" Background="LightBlue" HorizontalAlignment="Left" Height="27" Margin="32,82,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="222"/>
    </Grid>
</Window>
