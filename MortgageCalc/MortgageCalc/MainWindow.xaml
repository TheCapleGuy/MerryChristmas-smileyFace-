<Window x:Class="MortgageCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortgageCalc"
        mc:Ignorable="d"
        Title="Mortage Calculator" Height="550" Width="750">
    <Grid> 
        <TextBox x:Name="mortgageAmount" Background="LightBlue"  HorizontalAlignment="Left" Height="27" Margin="32,50,0,444"  TextWrapping="Wrap" Text="Mortgage Amount" VerticalAlignment="Top" Width="222"/>
        <TextBox x:Name="interestRate"   Background="LightPink"  HorizontalAlignment="Left" Height="27" Margin="254,50,0,444" TextWrapping="Wrap" Text="Interest Rate"   VerticalAlignment="Top" Width="222"/>
        <TextBox x:Name="mortagePeriod"  Background="LightGreen" HorizontalAlignment="Left" Height="27" Margin="476,50,44,0"  TextWrapping="Wrap" Text="Mortgage Period" VerticalAlignment="Top" Width="222"/>
    </Grid>
</Window>
